# Universal Agent environment template
# Copy to .env and fill in real values.

# ============================
# Core API Keys
# ============================
COMPOSIO_API_KEY=
COMPOSIO_USER_ID=

# Anthropic / Z.ai
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=
ANTHROPIC_AUTH_TOKEN=
ZAI_API_KEY=

# Optional integrations
GITHUB_PERSONAL_ACCESS_TOKEN=
EXA_API_KEY=
CONTEXT7_API_KEY=
CRAWL4AI_API_KEY=
LETTA_API_KEY=
LETTA_PROJECT_ID=

# ============================
# Model Configuration
# ============================
MODEL_NAME=claude-sonnet-4-5-20250929
MAX_TOKENS=15000
API_TIMEOUT_MS=30000

# ============================
# Logging / Observability
# ============================
LOG_LEVEL=INFO
ENVIRONMENT=development
CLAUDE_CODE_ENABLE_TELEMETRY=1
LOGFIRE_ORG=
LOGFIRE_PROJECT=
LOGFIRE_READ_TOKEN=
LOGFIRE_WRITE_TOKEN=
LOGFIRE_TOKEN=${LOGFIRE_WRITE_TOKEN}

# ============================
# Telegram (optional)
# ============================
TELEGRAM_BOT_TOKEN=
ALLOWED_USER_IDS=
WEBHOOK_SECRET=
WEBHOOK_URL=

# ============================
# Memory (UA file-based memory)
# ============================
# Recommended defaults: ON for dev; set UA_MEMORY_ENABLED=0 for prod if needed.
UA_MEMORY_ENABLED=1
UA_MEMORY_INDEX=json
UA_MEMORY_MAX_TOKENS=800
UA_MEMORY_RECENT_ENTRIES=8
UA_MEMORY_FLUSH_MAX_CHARS=4000
UA_MEMORY_FLUSH_ON_EXIT=1

# Letta memory disabled by default
UA_DISABLE_LOCAL_MEMORY=0
UA_LETTA_CAPTURE_ONLY=0
UA_LETTA_SUBAGENT_MEMORY=0

# ============================
# Heartbeat (gateway scheduler)
# ============================
# Default off. Enable explicitly for dev/testing.
UA_ENABLE_HEARTBEAT=0
UA_DISABLE_HEARTBEAT=0
UA_HEARTBEAT_INTERVAL=300
UA_HEARTBEAT_EXEC_TIMEOUT=45
UA_HB_DELIVERY_MODE=last
UA_HB_EXPLICIT_SESSION_IDS=
UA_HB_SHOW_OK=false
UA_HB_SHOW_ALERTS=true
UA_HB_DEDUPE_WINDOW=86400
UA_HB_USE_INDICATOR=false
UA_HEARTBEAT_MOCK_RESPONSE=0

# ============================
# Misc
# ============================
DEFAULT_USER_ID=
EDGAR_IDENTITY=
UA_PRIMARY_EMAIL=
CONSOLE_WIDTH=0
# UV cache path (optional, keep inside repo to avoid permission errors)
UV_CACHE_DIR=

# ============================
# Token limits
# ============================
CLAUDE_CODE_MAX_OUTPUT_TOKENS=64000
MAX_MCP_OUTPUT_TOKENS=64000
UA_BATCH_MAX_WORDS=50000
